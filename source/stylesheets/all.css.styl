@charset "utf-8"

@import "nib"

body
  background #d4d4d4 url("../images/magic_planets_1440.jpg")

.content
  padding 1em
  margin auto
  width 960px
  background rgba(220, 220, 200, 0.9)

pre
  padding-left 2em

a.spork
  background transparent url("../images/spork.png") no-repeat center
  width 200px
  height 412px
  display inline-block
  position absolute
  top 0
  right -125px

  transform rotate(-0.1turn)

  &:hover
    transform rotate(0.2turn)

  &:active
    transition transform 0.01s ease-in-out
    transform translate(-100px, 40px)

  transition transform 20s ease-in
